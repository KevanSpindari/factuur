{% extends 'base.html.twig' %}

{% block title %}Table index{% endblock %}

{% block body %}
    <h1>Table index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Klantnaam</th>
                <th>Btwnummer</th>
                <th>Adres</th>
                <th>Plaats</th>
                <th>Postcode</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for table in tables %}
            <tr>
                <td>{{ table.id }}</td>
                <td>{{ table.klantnaam }}</td>
                <td>{{ table.btwnummer }}</td>
                <td>{{ table.adres }}</td>
                <td>{{ table.plaats }}</td>
                <td>{{ table.postcode }}</td>
                <td>
                    <a href="{{ path('table_show', {'id': table.id}) }}">show</a>
                    <a href="{{ path('table_edit', {'id': table.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('table_new') }}">Create new</a>
{% endblock %}
